            <RadioButton x:Name="Min" Content="Natural Minor Scale" Width="135" Margin="10"/>
            <RadioButton x:Name="Harm" Content="Harmonic Minor Scale" Width="146" Margin="10"/>
            <RadioButton x:Name="Blues" Content="Minor Blues Scale" Width="120" Margin="10"/>
